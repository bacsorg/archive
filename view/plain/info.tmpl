<% c++ #include <bacs/archive/web/content/form.hpp> %>
<% c++ #include <bacs/archive/web/filters/base64_binary.hpp> %>
<% skin plain %>
    <% view info uses bacs::archive::web::content::info extends base_form %>
        <% template scripts() %>
            <% include base_form::scripts() %>
            <script src="/static/plain/protobuf.js" type="text/javascript"></script>
        <% end template %>
        <% template subtitle() %>
            <% gt "Problems info" %>
        <% end template %>
        <% template form() %>
            <h3><% gt "Get problems info" %></h3>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id_info in result.get() %>
                    <table border="1" cellspacing="0" cellpadding="10">
                        <caption><% gt "Problem info" %></caption>
                        <tr>
                            <th><% gt "Problem" %></th>
                            <th><% gt "Info" %></th>
                        </tr>
                        <% item %>
                            <tr>
                                <td><%= id_info.first %></td>
                                <td>
                                    <% if id_info.second %>
                                        <div class="protobuf">
                                            <div class="spoiler">
                                                <span class="action">
                                                    <% gt "Show" %>&nbsp;"<%= id_info.second->info().system().problem_type() %>"&nbsp;<% gt "info" %>
                                                </span>
                                                <span class="action" style="display: none">
                                                    <% gt "Hide" %>&nbsp;"<%= id_info.second->info().system().problem_type() %>"&nbsp;<% gt "info" %>
                                                </span>
                                            </div>
                                            <pre style="display: none"><%= id_info.second->DebugString() %></pre>
                                        </div>
                                    <% else %>
                                        <% gt "Not found" %>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </table>
                <% empty %>
                    <% gt "There are no problems available." %>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
