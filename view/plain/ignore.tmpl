<% c++ #include <bacs/archive/web/content/form.hpp> %>
<% skin plain %>
    <% view ignore uses bacs::archive::web::content::ignore extends base_form %>
        <% template subtitle() %>
            <% gt "Ignore problems" %>
        <% end template %>
        <% template form() %>
            <h3><% gt "Ignore problems from archive" %></h3>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% using status_map_result with *result as result_view %>
                    <% include render() from result_view %>
                <% end using %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
