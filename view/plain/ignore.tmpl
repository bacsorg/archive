<% c++ #include <bacs/archive/web/content/form.hpp> %>
<% skin plain %>
    <% view ignore uses bacs::archive::web::content::ignore extends base_form %>
        <% template subtitle() %>
            <% gt "Ignore problems" %>
        <% end template %>
        <% template form() %>
            <h3><% gt "Ignore problems from archive" %></h3>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id in result->id() %>
                    <% gt "The following problems are ignored:" %>
                    <ul class="problem_ids">
                        <% item %>
                            <li><%= id %></li>
                        <% end %>
                    </ul>
                <% empty %>
                    <% gt "There are no existing problems." %>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
