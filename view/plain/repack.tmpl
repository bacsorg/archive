<% c++ #include <bacs/archive/web/content/form.hpp> %>
<% skin plain %>
    <% view repack_result uses bacs::archive::web::content::status_map_result extends status_map_result %>
        <% template caption() %>
            <% gt "Repack results" %>
        <% end template %>
    <% end view %>
    <% view repack uses bacs::archive::web::content::repack extends base_form %>
        <% template subtitle() %>
            <% gt "Repack problems" %>
        <% end template %>
        <% template form() %>
            <h3><% gt "Repack problems" %></h3>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% using repack_result with *result as result_view %>
                    <% include render() from result_view %>
                <% end using %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
